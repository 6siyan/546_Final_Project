<main class="container px-4 text-center">
    <div class="container row row-cols-auto">
        {{#if postData}}
        <div id="map-main">

        </div>

        {{#each postData}}
        <div class="gx-3 gy-3">
            <div class="card col" style="width: 18rem;" id={{_id}}>
                <img src={{animal_photo}} class="card-img-top" alt="Picture">
                <div class="card-body">
                    <h1 class="card-title">{{animal_name}}</h1>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Find Time: {{find_time}}</li>
                    <li class="list-group-item">Species: {{species}}</li>
                    <li class="list-group-item">Health Condition: {{health_condition}}</li>
                    <li class="list-group-item">Location: {{location_id}}</li>
                </ul>
            </div>
        </div>
        <script>
            var id = "{{_id}}";
            var address = '/animal/detail/' + id;
            var card = document.getElementById(id).querySelector('div');
            var newlink = document.createElement('a');
            newlink.href = address;
            newlink.className = "list-link";
            newlink.textContent = 'Get Detail';
            card.appendChild(newlink);
        </script>
        {{/each}}
        
        {{/if}}

    </div>
</main>

