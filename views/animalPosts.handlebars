<main class="post main">
    {{#if postData}}
    {{#each postData}}

    <div class="postCard" id={{_id}}>
        <img src={{animal_photo}} alt="Picture">
        <div class="infoArea">
            <p>Find Time: {{find_time}}</p>
            <p>Name: {{animal_name}}</p>
            <p>Species: {{species}}</p>
            <p>Health Condition: {{health_condition}}</p>
            <p>Location: {{location_id}}</p>
            <p>{{comment_id}}</p>

        </div>
    </div>
    <script>
        var id = "{{_id}}";

        var address = '/animal/detail/' + id;

        var card = document.getElementById(id);
        var newlink = document.createElement('a');
        newlink.href = address;
        newlink.textContent = 'More Detail';
        card.appendChild(newlink);
    </script>
    {{/each}}
    {{/if}}
</main>

