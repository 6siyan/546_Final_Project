<main class="container text-center">
    <hr>
    <div class="row mb-3">
        <h1>HELLO! {{first_name}} {{last_name}}</h1>
    </div>
    <div class="row mb-3">
        <a href="/animal/new" class="col">Upload New Stray Animal</a>
        <a href="/volunteer/new" class="col">Upload New Volunteer Info</a>
        <a href="/user/edit/currentid" class="col">Account Setting</a>
    </div>
    <hr>

    <h5>My Animal Posts</h5>
    <div class="userCenterInfo container-fluid" style="overflow-y: scroll;">
        <div class="row flex-row flex-nowrap mt-3">
            {{#if animal_posts}}
            {{#each animal_posts}}
            <div class="card col-3" style="width: 280px; margin-left: 20px" id={{_id}}>
                <img src={{animal_photo}} class="card-img-top" alt="Picture">
                <div class="card-body row">
                    <h5 class="card-title row">Find Time: {{find_time}}</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Name: {{animal_name}}</li>
                    <li class="list-group-item">Species: {{species}}</li>
                    <li class="list-group-item">Health Condition: {{health_condition}}</li>
                    <li class="list-group-item">Location: {{location_id}}</li>
                </ul>
            </div>
            <script>
                var id = "{{_id}}";
                var address = '/animal/detail/' + id;
                var card = document.getElementById(id).querySelector('div');
                var newlink = document.createElement('a');
                newlink.href = address;
                newlink.className = "list-link";
                newlink.textContent = 'Get Detail';
                card.appendChild(newlink);
            </script>
            {{/each}}
            {{else}}
            <p>No Value</p>
            {{/if}}
        </div>
    </div>
    <div class="row userCenterInfo mb-3">
        <h5>My followed animal posts</h5>

        {{#if follow_animal_posts}}
        {{#each follow_animal_posts}}
        <div class="gx-3 gy-3">
            <div class="card col" style="width: 18rem;" id={{_id}}>
                <img src={{animal_photo}} class="card-img-top" alt="Picture">
                <div class="card-body">
                    <h5 class="card-title">Find Time: {{find_time}}</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Name: {{animal_name}}</li>
                    <li class="list-group-item">Species: {{species}}</li>
                    <li class="list-group-item">Health Condition: {{health_condition}}</li>
                    <li class="list-group-item">Location: {{location_id}}</li>
                </ul>
            </div>
        </div>
        <script>
            var id = "{{_id}}";
            var address = '/animal/detail/' + id;
            var card = document.getElementById(id).querySelector('div');
            var newlink = document.createElement('a');
            newlink.href = address;
            newlink.className = "list-link";
            newlink.textContent = 'Get Detail';
            card.appendChild(newlink);
        </script>
        {{/each}}
        {{else}}
        <p>No Value</p>
        {{/if}}


    </div>
    <div class="row userCenterInfo mb-3">
        <h5>My volunteer posts</h5>

        {{#if volunteer_posts}}
        {{#each volunteer_posts}}
        <div class="gx-3 gy-3">
            <div class="card col" style="width: 18rem;" id={{_id}}>
                <div class="card-body">
                    <h5 class="card-title">{{volunteer_name}}</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">location: {{volunteer_location}}</li>
                    <li class="list-group-item">Contact: {{volunteer_contact}}</li>
                    <li class="list-group-item">Type: {{volunteer_type}}</li>
                    <li class="list-group-item">{{volunteer_decription}}</li>
                </ul>
            </div>
        </div>
        {{/each}}

        {{else}}

        <p>No Value</p>

        {{/if}}


    </div>
</main>